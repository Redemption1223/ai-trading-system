# AGI Trading System - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control

# =============================================================================
# MT5 BROKER CONFIGURATION
# =============================================================================
# Your MetaTrader 5 login credentials
MT5_LOGIN=your_mt5_login_number
MT5_PASSWORD=your_mt5_password  
MT5_SERVER=your_broker_server_name

# Example values (replace with your actual broker info):
# MT5_LOGIN=12345678
# MT5_PASSWORD=MySecurePassword123
# MT5_SERVER=FxPro-MT5

# Broker specific settings
BROKER_NAME=YourBrokerName
ACCOUNT_TYPE=live  # Options: demo, live - SET TO LIVE FOR REAL TRADING

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================
# Flask application settings
FLASK_ENV=development  # Options: development, production
FLASK_SECRET_KEY=your_random_secret_key_here
FLASK_PORT=5000
FLASK_DEBUG=true

# Database configuration
DATABASE_URL=sqlite:///database/trading_system.db

# =============================================================================
# API KEYS AND EXTERNAL SERVICES
# =============================================================================
# News API for sentiment analysis
NEWS_API_KEY=your_news_api_key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key

# Economic calendar APIs
FOREX_FACTORY_API=your_forex_factory_key
TRADING_ECONOMICS_API=your_trading_economics_key

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Risk management limits
MAX_RISK_PER_TRADE=0.02     # 2% of account
MAX_DAILY_LOSS=0.05         # 5% daily loss limit
MAX_OPEN_POSITIONS=5        # Maximum concurrent trades

# Position sizing
DEFAULT_LOT_SIZE=0.01
MIN_LOT_SIZE=0.01
MAX_LOT_SIZE=1.0

# =============================================================================
# SYSTEM MONITORING
# =============================================================================
# Logging configuration
LOG_LEVEL=INFO              # Options: DEBUG, INFO, WARNING, ERROR
LOG_TO_FILE=true
LOG_ROTATION=daily

# Performance monitoring
ENABLE_PERFORMANCE_TRACKING=true
METRICS_UPDATE_INTERVAL=60  # seconds

# =============================================================================
# DEVELOPMENT/TESTING
# =============================================================================
# Development flags
DEVELOPMENT_MODE=true
ENABLE_DEBUGGING=true
MOCK_MT5_CONNECTION=false   # Set to true for testing without MT5

# Testing configuration
TEST_ACCOUNT_BALANCE=10000
BACKTEST_START_DATE=2024-01-01
BACKTEST_END_DATE=2024-12-31

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# JWT settings for API authentication (Phase 2)
JWT_SECRET_KEY=your_jwt_secret_key
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour

# API rate limiting
API_RATE_LIMIT=100  # requests per minute

# =============================================================================
# NEURAL NETWORK CONFIGURATION  
# =============================================================================
# ML model settings
MODEL_UPDATE_FREQUENCY=daily
TRAINING_DATA_DAYS=365
MODEL_CONFIDENCE_THRESHOLD=0.6

# GPU configuration (if available)
USE_GPU=false
GPU_MEMORY_FRACTION=0.5

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# Email notifications (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
NOTIFICATION_EMAIL=alerts@yourtrading.com

# Discord/Slack webhooks (optional)  
DISCORD_WEBHOOK_URL=your_discord_webhook_url
SLACK_WEBHOOK_URL=your_slack_webhook_url

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================
# System performance
MAX_CPU_USAGE=80            # Percentage
MAX_MEMORY_USAGE=2048       # MB
CONNECTION_TIMEOUT=30       # seconds
RECONNECTION_ATTEMPTS=5

# Agent coordination
SIGNAL_TIMEOUT=30           # seconds
AGENT_HEALTH_CHECK=60       # seconds
MAX_SIGNAL_AGE=300          # seconds

# =============================================================================
# PHASE 2 SETTINGS (Implementation pending)
# =============================================================================
# Real-time data feeds
REAL_TIME_DATA_PROVIDER=mt5  # Options: mt5, iqfeed, interactive_brokers
DATA_UPDATE_FREQUENCY=1      # seconds

# Advanced features
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_NEWS_TRADING=false
ENABLE_CORRELATION_ANALYSIS=true

# =============================================================================
# INSTRUCTIONS
# =============================================================================
# 1. Copy this file to .env in the same directory
# 2. Replace all placeholder values with your actual credentials
# 3. Never commit .env files to version control  
# 4. Keep your credentials secure and private
# 5. Test your configuration using: python scripts/test_connection.py

